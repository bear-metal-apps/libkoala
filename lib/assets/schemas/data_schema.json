{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Beariscope Data Schema",
  "type": "object",
  "properties": {
    "version": {
      "type": "integer"
    },
    "metadata": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/dataField"
      }
    },
    "auto": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/dataField"
      }
    },
    "tele": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/dataField"
      }
    },
    "endgame": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/dataField"
      }
    }
  },
  "required": [
    "version",
    "metadata",
    "auto",
    "tele",
    "endgame"
  ],
  "$defs": {
    "dataField": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9]+(?:_[a-z0-9]+)*$"
        },
        "display_name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "integer",
            "string",
            "boolean",
            "array"
          ]
        },
        "enum": {
          "type": "array",
          "items": { "type": "string" }
        },
        "items": {
          "type": "string",
          "enum": [
            "integer",
            "string",
            "boolean"
          ]
        }
      },
      "required": [
        "id",
        "display_name",
        "type"
      ]
    }
  }
}
